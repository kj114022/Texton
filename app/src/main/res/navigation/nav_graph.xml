<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navFeed">

    <fragment
        android:id="@+id/navFiles"
        android:name="io.github.aloussase.booksdownloader.ui.files.FilesFragment"
        android:label="Files" />

    <fragment
        android:id="@+id/navFeed"
        android:name="io.github.aloussase.booksdownloader.ui.feed.FeedFragment"
        android:label="Home">
         <action
            android:id="@+id/action_navFeed_to_navSearch"
            app:destination="@id/navSearch" />
    </fragment>

    <fragment
        android:id="@+id/navSearch"
        android:name="io.github.aloussase.booksdownloader.ui.fragments.BookSearchFragment"
        android:label="@string/search_books_toolbar_title">
        <action
            android:id="@+id/action_navSearch_to_navDetails"
            app:destination="@id/navDetails" />
    </fragment>
    <fragment
        android:id="@+id/navConvert"
        android:name="io.github.aloussase.booksdownloader.ui.fragments.ConvertFragment"
        android:label="@string/convert_books_toolbar_title" />
    <fragment
        android:id="@+id/navMore"
        android:name="io.github.aloussase.booksdownloader.ui.fragments.MoreFragment"
        android:label="" />
    <action
        android:id="@+id/action_global_navSearch"
        app:destination="@id/navSearch" />
    <action
        android:id="@+id/action_global_navConvert"
        app:destination="@id/navConvert" />
    <action
        android:id="@+id/action_global_moreFragment"
        app:destination="@id/navMore" />
    <fragment
        android:id="@+id/navAbout"
        android:name="io.github.aloussase.booksdownloader.ui.fragments.AboutFragment"
        android:label="@string/about" />
    <fragment
        android:id="@+id/navDetails"
        android:name="io.github.aloussase.booksdownloader.ui.fragments.BookDetailsFragment"
        android:label="Book Details">
        <argument
            android:name="book"
            app:argType="io.github.aloussase.booksdownloader.data.Book" />
    </fragment>

    <action
        android:id="@+id/action_global_aboutFragment"
        app:destination="@id/navAbout" />
</navigation>